<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.spam.persistence.LoginMapper">
	<resultMap id="loginResultMap" type="spamuser">
		<id column="SPAMID" property="spamId" />
		<result column="PASSWORD" property="passWord" />
		<result column="RANK" property="rank" />
		<result column="NAME" property="name" />
		<result column="BIRTHDAY" property="birthDay" />
	</resultMap>

	<select id="select" parameterType="spamuser" resultMap="loginResultMap">
		SELECT   SPAMID
			   , PASSWORD
			   , RANK
			   , NAME 
			   , BIRTHDAY
		FROM SPAMUSER
		<where>
			<if test="spamId != null and spamId !=''">
				AND SPAMID = #{spamId}
			</if>
			<if test="passWord != null and passWord != ''" >
				AND PASSWORD = #{passWord}
			</if>
			<if test="rank != null and rank != ''">
				AND RANK = #{rank}
			</if>
			<if test="name != null and name != ''" >
				AND NAME = #{name}
			</if>
			<if test="birthDay != null and birthDay != ''">
				AND BIRTHDAY = #{birthDay}
			</if>
		</where>
	</select>
	<select id="list" parameterType="spamuser" resultMap="loginResultMap">
		SELECT   SPAMID
			   , PASSWORD
			   , RANK
			   , NAME 
			   , BIRTHDAY
		FROM SPAMUSER
	</select>
</mapper>